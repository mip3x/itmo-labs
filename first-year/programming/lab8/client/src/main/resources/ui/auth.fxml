<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.AuthController"
      alignment="CENTER" spacing="10" fx:id="root">
    <Label fx:id="titleLabel" style="-fx-font-size: 20px;"/>
    <TextField fx:id="usernameField" promptText="%username.prompt" maxWidth="300" style="-fx-background-radius: 10;"/>
    <PasswordField fx:id="passwordField" promptText="%password.prompt" maxWidth="300" style="-fx-background-radius: 10;"/>
    <Label fx:id="errorLabel" style="-fx-text-fill: red;"/>
    <VBox spacing="10" alignment="CENTER">
        <Button fx:id="switchPageButton" minWidth="150" style="-fx-background-radius: 10;"/>
        <Button fx:id="actionButton" minWidth="150" style="-fx-background-radius: 10;"/>
    </VBox>
    <VBox alignment="CENTER">
        <ComboBox fx:id="languageSelector" style="-fx-background-radius: 10;"/>
    </VBox>
</VBox>
